@model IEnumerable<PhimHang.Models.RecommendStock>
@{
    ViewBag.Title = "Danh sách khuyến nghị khách hàng";
    Layout = "~/Views/Shared/_Layout_Main.cshtml";
}

<h2>
    Danh mục khuyến nghị mua & bán
</h2>
<div id="example_length" class="dataTables_length1">
    <table class="form">
        <tr>
            <td><b>Ngày:</b></td>
            <td><input class="col2" type="text" id="grumble" /></td>
            <td><b>Mã:</b></td>
            <td><input type="text" id="grumble" /></td>
            <td><b>Người khuyến nghị:</b></td>
            <td>@Html.DropDownList("select", @ViewBag.listUserId as SelectList, String.Empty, new { @name = "select" })</td>
            <td><b>Loại:</b></td>
            <td>@Html.DropDownList("select", @ViewBag.listTypeRecomendation as SelectList, String.Empty, new { @name = "select" })</td>
            <td></td>
            <td><input type="submit" value="Tìm kiếm" class="btn btn-blue"></td>
            
        </tr>
        </table>
</div>
<div class="block">    
    <table class="data display datatable" id="example">
        <thead>
            <tr>
                <th>Ngày</th>
                <th>Mã</th>
                <th>Người khuyến nghị</th>
                <th>Loại</th>
                <th>Tổng bình luận</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserLogin.UserNameCopy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TYPERecommend)
        </td>
        <td>
            20
        </td>
        <td><a style="color: #328AC5" href="#">chi tiết</a></td>
    </tr>
}
        </tbody>
    </table>



</div>

