@using AquilaAd;
@model ShareHolderCore.Domain.Model.Payment
@{
    ViewBag.Title = "Chi tiết thanh toán";
}
<link href="../../Content/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/jquery-ui-1.8.20.min.js" type="text/javascript"></script> @*load date time picker*@

<div id="content">

            <h2><span>Property : Property List</span></h2>

            <!-- tab -->
            <ul id="tab">
                <li><a href="#" title="Property 100 (rows)">Property 100 (rows)</a></li>
                <li class="Active">
                    <span>New property</span>
                    <a href="#" title="Close" class="Close">Close</a>
                </li>
            </ul>
            <!-- tab.end -->

            <!-- panel -->
            <div class="Panel">

                <!-- functions -->
                <ul class="Functions">
                   @* <li><a href="#" id="submit_link">Save</a>*@
                    @*<li>@Html.ActionLink("Save", "Save", "Home", new { actionpage = "Save", idhotel = "" }, null)</li>*@
                    @*<li>@Html.ActionLink("Save & New", "Save", "Home", new { actionpage = "SaveNew", idhotel = "" }, null)</li>*@
                    <li>@Html.ActionLink("Thoát", "Cancel", "Payment")</li>
                    <li>
                        <span>Actions</span>
                        <ul>
                            <li><a href="#" title="Approve property">Approve property</a></li>
                            <li><a href="#" title="View facilities">View facilities</a></li>
                            <li>
                                <span>Translation</span>
                                <ul>
                                    <li><a href="#" title="Tiếng Việt">Tiếng Việt</a></li>
                                    <li><a href="#" title="French">French</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
                <!-- functions.end -->

            </div>
            <!-- panel.end -->

            <!-- subtab -->
            <ul id="subtab">
                <li class="Active"><span>General Info</span></li>
                <li><a href="#" title="Detail Info">Detail Info</a></li>
            </ul>
            <!-- subtab.end -->

            <!-- mainContent -->
            
            <div id="mainContent">
             @using (Html.BeginForm("Edit", "Availability", FormMethod.Post, new { id = "Submitform" }))
             {
                 @Html.ValidationSummary()
                <fieldset>
                 <div>                     
                     <input type="hidden" value="@Model.BookingId" id="GetBookingId" name="GetBookingId" />  
                    </div>
                    <div class="Input">
                        <label for="unit">Mã đặt phòng:</label>
                       
                        @Html.Label(Model.BookingCode, new { id = "txtFromDate", name = "txtFromDate", @class = "Medium" })
                    </div>
                  <div class="Input">
                        <label for="unit">Ngày thanh toán:</label>
                       
                         @Html.Label(Model.PaymentDate, new { id = "m.Price", @class = "Medium" })
                    </div>
                     <div class="Input">
                        <label for="price">Họ và tên:</label>
                        @Html.Label(Model.FirstName + " " + Model.LastName, new { id = "m.Price", @class = "Medium" })
                    </div>
                     <div class="Input">
                         <label for="price">Email:</label>
                        @Html.Label(Model.Email, new { id = "m.Price", @class = "Medium" })
                    </div>
                     <div class="Input">
                      <label for="price">Số điện thoại:</label>
                        @Html.Label(Model.PhoneNumber, new { id = "m.Price", @class = "Medium" })
                    </div>
                 
                    
                    <div class="Input">
                        <label for="currency">Ngày đến:</label>
                        @Html.Label(Model.CheckInTime, new { id = "m.Price", @class = "Medium" })
                        
                    </div>
                    <div class="Input">
                        <label for="price">Ghi chú:</label>                        
                         
                         @Html.TextArea("RemarkPayment", Model.Remark, new { id = "mediumDescription", disabled = "disabled", name = "mediumDescription", rows = "5", cols = "10", style = "width:450px;height:50px" }) 
                    </div>
                         <div class="Input">
                        <label for="IsHotDeal">Tổng số tiền thanh toán:</label>
                        @Html.Label(string.Format("{0,0:N0}",Model.OrderAmount), new { id = "m.Price", @class = "Medium" })
                    </div>
                     <div class="Input">
                        <label for="price">Cần thanh toán trước:</label>
                        
                         @Html.Label(string.Format("{0,0:N0}",Model.DispositAmount), new { id = "m.Price", @class = "Medium" })
                    </div>
                         <div class="Input">
                        <label for="IsHotDeal">Đã thanh toán:</label>
                        @Html.Label(string.Format("{0,0:N0}", Model.PaymentAmount), new { id = "m.Price", @class = "Medium" })
                    </div>
                    <div>
                         <div class="Input">
                        <label for="IsHotDeal">Địa chỉ IP Khách hàng:</label>
                        @Html.Label( Model.IpAddress, new { id = "m.Price", @class = "Medium" })
                    </div>
                  </div>
                    
                      <div class="Table">
                        <table cellpadding="0" cellspacing="0">
                            <thead>
                                <tr>
                                  <th>Ngày đến</th>
                                  <th>Ngày đi</th>
                                  <th>Tên KS</th>
                                  <th>Loại phòng</th>
                                  <th>Số ngày</th>                                 
                                  <th>Số lượng</th>                                 
                                  <th>Giá</th>                                  
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in (IList<ShareHolderCore.Domain.Model.BookingDetail>)ViewData["listBookingDetail"])
                            {                                
                               <tr>
                                     <td>@AquilaAd.Ext.CustomHelpers.parstFormatTo_DD_MM_YYYY(@item.FromDate)</td>
                                    <td>@AquilaAd.Ext.CustomHelpers.parstFormatTo_DD_MM_YYYY(@item.ToDate)</td>
                                    <td>@AquilaAd.Ext.CustomHelpers.getNameHotel(@item.HotelId)</td>                                                                                                  
                                    <td>@item.RoomType.Name</td>
                                    <td>@{ 
                                          @: @string.Format("{0,0:N0}", @item.ToDate.ToInt32() - @item.FromDate.ToInt32())
                                        }
                                         </td>
                                    <td> @item.Quantity</td>
                                    <td>@string.Format("{0,0:N0}", @item.Price)</td>
                                </tr>
                            }                                
                            </tbody>
                        </table>
                    </div>
                </fieldset>                 
             }
                
            </div>
            <!-- mainContent.end -->

            <!-- panel -->
            <div class="Panel">

                <!-- functions -->
                <ul class="Functions">
                    <li>@Html.ActionLink("Thoát", "Cancel", "Payment")</li>
                    <li>
                        <span>Actions</span>
                        <ul>
                            <li><a href="#" title="Approve property">Approve property</a></li>
                            <li><a href="#" title="View facilities">View facilities</a></li>
                            <li>
                                <span>Translation</span>
                                <ul>
                                    <li><a href="#" title="Tiếng Việt">Tiếng Việt</a></li>
                                    <li><a href="#" title="French">French</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
                <!-- functions.end -->

            </div>
            <!-- panel.end -->

        </div>
<script type="text/javascript">
    $(function () {
        $('a#submit_link').click(function () {
            $('form#Submitform').submit();
        });
    });
</script>
