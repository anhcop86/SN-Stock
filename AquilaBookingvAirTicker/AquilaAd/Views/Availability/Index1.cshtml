@model IEnumerable<ShareHolderCore.Domain.Model.Availability>
@{
    ViewBag.Title = "Loại Phòng";
}
@Html.EJ().DatePicker("DatePick").DateFormat("dd/MM/yyyy").ShowOtherMonths(true).EnableRTL(false).Locale("en-US").Value(ViewBag.datevalue) 
<div id="content">

            <h2><span>Danh sách phòng trống</span></h2>

            <!-- tab -->
            <ul id="tab">
                <li class="Active"><span>@string.Format("Tổng cộng {0} phòng trống",1)</span></li>
            </ul>
            <!-- tab.end -->

            <!-- panel -->
            <div class="Panel">

                <!-- functions -->
                <ul class="Functions">
                    <li>@Html.ActionLink("New", "Create", "Availability")</li>
                    <li><a href="#" title="Delete" name="deleteHotelLink"  class="deleteHotelLink">Delete</a></li>
                    <li><a href="#" title="View">View</a></li>
                    <li>
                        <span>Actions</span>
                        <ul>
                            <li><a href="#" title="Approve property">Approve property</a></li>
                            <li><a href="#" title="View facilities">View facilities</a></li>
                            <li>
                                <span>Translation</span>
                                <ul>
                                    <li><a href="#" title="Tiếng Việt">Tiếng Việt</a></li>
                                    <li><a href="#" title="French">French</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
                <!-- functions.end -->

                <!-- pager -->
                <ul class="Pager">
                    <li class="RangePrevious"><a href="#" title="Previous range">&lt;&lt;</a></li>
                    <li class="Previous"><a href="#" title="Previous">&lt;</a></li>
                      
                    <li class="Next"><a href="#" title="Next">&gt;</a></li>
                    <li class="RangeNext"><a href="#" title="Next range">&gt;&gt;</a></li>
                </ul>
                <!-- pager.end -->

            </div>
            <!-- panel.end -->

            <!-- mainContent -->
            <div id="mainContent">
                <fieldset>
                 @using (Html.BeginForm("Index", "Availability",FormMethod.Get))
                 {                
                    <div class="Filter">
                        <div class="Filterdisplay" style="float:left">
                            <label for="property">Filter:</label>                    
                            @*@Html.DropDownList("TypeAvailability", (SelectList)ViewBag.listsTypeFilterOfAvailability, new { @class = "Medium" })*@
                        </div>
                        <div class="Pricedisplay" style="float:left">
                           <label> Từ:</label> <input type="text" name="ValueAvailabilityPriceFrom" value="@ViewData["ValueAvailabilityPriceFrom"]" style="width:100px;"  />
                           <label> đến:</label> <input type="text" name="ValueAvailabilityPriceTo" value="@ViewData["ValueAvailabilityPriceTo"]" style=" width:100px"  />
                        </div>
                        <input type="submit" value="tìm" style="width:100px;" />                        
                    </div>
                  
                 }
                    <!-- filter -->
                    <div id="newFilter">
                        <div id="filter">
                            <h3><span>Define your filter</span></h3>
                            <fieldset>
                                <div>
                                    <label for="keyword">Description:</label>
                                    <input type="text" id="keyword" name="keyword" class="TextInput2" />
                                </div>
                                <ul>
                                    <li>
                                        <select id="description" name="description" class="DropDown1">
                                            <option>Description</option>
                                        </select>
                                        <select id="operator1" name="operator1" class="DropDown2">
                                            <option>Like</option>
                                            <option>=</option>
                                            <option>&gt;=</option>
                                            <option>&lt;=</option>
                                        </select>
                                        <input type="text" id="keyword1" name="keyword1" class="TextInput1" />
                                        <select id="logical1" name="logical1" class="DropDown2">
                                            <option>Or</option>
                                            <option>And</option>
                                            <option>Not</option>
                                        </select>
                                    </li>
                                    <li>
                                        <select id="price" name="price" class="DropDown1">
                                            <option>Price</option>
                                        </select>
                                        <select id="operator2" name="operator2" class="DropDown2">
                                            <option>Like</option>
                                            <option>=</option>
                                            <option>&gt;=</option>
                                            <option>&lt;=</option>
                                        </select>
                                        <input type="text" id="keyword2" name="keyword2" class="TextInput1" />
                                        <select id="logical2" name="logical2" class="DropDown2">
                                            <option>Or</option>
                                            <option>And</option>
                                            <option>Not</option>
                                        </select>
                                    </li>
                                    <li>
                                        <select id="leased" name="leased" class="DropDown1">
                                            <option>Leased</option>
                                        </select>
                                        <select id="operator3" name="operator3" class="DropDown2">
                                            <option>Like</option>
                                            <option>=</option>
                                            <option>&gt;=</option>
                                            <option>&lt;=</option>
                                        </select>
                                        <input type="text" id="keyword3" name="keyword3" class="TextInput1" />
                                        <select id="logical3" name="logical3" class="DropDown2">
                                            <option>Or</option>
                                            <option>And</option>
                                            <option>Not</option>
                                        </select>
                                    </li>
                                </ul>
                                <div class="Submit">
                                    <span class="Button"><span><input type="submit" value="Search" /></span></span>
                                    <span class="Button"><span><input type="button" value="Save and Close" /></span></span>
                                    <span class="Button"><span><input type="button" value="Close" /></span></span>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <!-- filter.end -->

                    
                        
                            @( Html.EJ().Grid<AquilaAd.Models.AvailabilityModel>("Filtering")
                                   .Datasource((IEnumerable<object>)ViewBag.datasource)
                                        .AllowPaging()
                                        .EnableHeaderHover()
                                        //.AllowSorting()
                                        .AllowFiltering()
                                                        .FilterSettings(fitersetting => { fitersetting.FilterType(FilterType.Menu); })
                                        .Columns(col =>
                                {
                                    col.Field("HotelName").HeaderText("Tên khách sạn").TextAlign(TextAlign.Left).Width(100).Add();
                                    col.Field("RoomName").HeaderText("Loại phòng").TextAlign(TextAlign.Center).Width(30).Add();
                                    col.Field("Number").HeaderText("Số Lượng").TextAlign(TextAlign.Right).Width(30).Add();
                                    col.Field("Price").HeaderText("Giá phòng").TextAlign(TextAlign.Right).Format("{0:N0}").Width(30).Add();
                                    col.Field("FromDate").HeaderText("Từ ngày").TextAlign(TextAlign.Right).Format("{0:dd/MM/yyyy}").Width(30).Add();
                                    col.Field("ToDate").HeaderText("Đến ngày").TextAlign(TextAlign.Center).Format("{0:dd/MM/yyyy}").Width(30).Add();
                                    
                                })
                                )
                                
                            
                       
                </fieldset>
            </div>
            <!-- mainContent.end -->

            <!-- panel -->
            <div class="Panel">

                <!-- functions -->
                <ul class="Functions">
                     <li>@Html.ActionLink("New", "Create", "Availability")</li>
                     <li><a href="#" title="Delete" name="deleteHotelLink"  class="deleteHotelLink">Delete</a></li>
                    <li><a href="#" title="View">View</a></li>
                    <li>
                        <span>Actions</span>
                        <ul>
                            <li><a href="#" title="Approve property">Approve property</a></li>
                            <li><a href="#" title="View facilities">View facilities</a></li>
                            <li>
                                <span>Translation</span>
                                <ul>
                                    <li><a href="#" title="Tiếng Việt">Tiếng Việt</a></li>
                                    <li><a href="#" title="French">French</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
                <!-- functions.end -->

                <!-- pager -->
                <ul class="Pager">
                    <li class="RangePrevious"><a href="#" title="Previous range">&lt;&lt;</a></li>
                    <li class="Previous"><a href="#" title="Previous">&lt;</a></li>
                  
                    <li class="Next"><a href="#" title="Next">&gt;</a></li>
                    <li class="RangeNext"><a href="#" title="Next range">&gt;&gt;</a></li>
                </ul>
                <!-- pager.end -->

            </div>
            <!-- panel.end -->

        </div>
       

 