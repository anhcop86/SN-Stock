@model ShareHolderCore.Domain.Model.RoomType
@{
    ViewBag.Title = "Cập nhật phòng khách sạn";
}
<script src="../../Scripts/Common.js" type="text/javascript"></script>
<div id="content">

            <h2><span>Loại Phòng : Cập nhật</span></h2>

            <!-- tab -->
            <ul id="tab">
                <li><a href="#" title="Property 100 (rows)">Property 100 (rows)</a></li>
                <li class="Active">
                    <span>New property</span>
                    <a href="#" title="Close" class="Close">Close</a>
                </li>
            </ul>
            <!-- tab.end -->

            <!-- panel -->
            <div class="Panel">

                <!-- functions -->
                <ul class="Functions">
                    <li><a href="#" id="submit_link">Save</a></li>
                    @*<li>@Html.ActionLink("Save", "Save", "Home", new { actionpage = "Save", idhotel = "" }, null)</li>*@
                     <li>@Html.ActionLink("Delete", "Delete", "RoomHotel",  new { id = Model.RoomTypeId }, new { onclick = "confirmAction(event, 'Bạn Muốn Xóa phòng này ra khỏi hệ thống?');" })</li>
                    <li>@Html.ActionLink("Cancel", "CancelHotel", "Home", new { actionpage = "Cancel", idhotel = "" }, null)</li>
                    <li>
                        <span>Actions</span>
                        <ul>
                            <li><a href="#" title="Approve property">Approve property</a></li>
                            <li><a href="#" title="View facilities">View facilities</a></li>
                            <li>
                                <span>Translation</span>
                                <ul>
                                    <li><a href="#" title="Tiếng Việt">Tiếng Việt</a></li>
                                    <li><a href="#" title="French">French</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
                <!-- functions.end -->

            </div>
            <!-- panel.end -->

            <!-- subtab -->
            <ul id="subtab">
                <li class="Active"><span>General Info</span></li>
                <li><a href="#" title="Detail Info">Detail Info</a></li>
            </ul>
            <!-- subtab.end -->

            <!-- mainContent -->
            
            <div id="mainContent">
             @using (Html.BeginForm("Edit", "RoomHotel", FormMethod.Post, new { id = "Submitform" }))
             {
                 @Html.ValidationSummary()
                <fieldset>
                 <div>                     
                     <input type="hidden" value="@Model.RoomTypeId" id="GetRoomTypeId" name="GetRoomTypeId" />  
                    </div>
                    <div class="Input">
                        <label for="code">Tên Tiếng Việt:</label>
                        @*<input type="text" id="HotelName" name="HotelName" class="Medium" required />*@
                        @Html.TextBoxFor(m => m.Name, new { id = "FacilityName", @class = "Large" })
                        @*@Html.ValidationMessageFor(m => m.Name)*@
                        
                        <span class="Required">*</span>
                    </div>
                  <div class="Input">
                        <label for="code">Tên Tiếng Anh:</label>                        
                         @Html.TextBoxFor(m => m.EnglishName, new { id = "CreatedBy", name = "CreatedBy", @class = "Medium" })
                    </div>
                    <div class="Input">
                        <label for="price">Ngày tạo:</label>
                        <input type="date" id="CreatedDate" name="CreatedDate" class="Medium" value='@AquilaAd.Ext.CustomHelpers.parstFormatToYYYY_MM_DD(Model.CreatedDate)' />
                        
                    </div>
                    <div class="Input">
                        <label for="code">Người tạo:</label>                        
                         @Html.TextBoxFor(m => m.CreatedBy, new { id = "CreatedBy", name = "CreatedBy", @class = "Medium" })
                    </div>
                    @*<input type="submit" value="sumit" id="submittest" style="background:none"/>*@
                </fieldset>                 
             }
                
            </div>
            <!-- mainContent.end -->

            <!-- panel -->
            <div class="Panel">

                <!-- functions -->
                <ul class="Functions">
                    <li><a href="#" id="submit_link">Save</a></li>
                    <li>@Html.ActionLink("Delete", "Delete", "RoomHotel", new { id = Model.RoomTypeId }, new { onclick = "confirmAction(event, 'Bạn Muốn Xóa phòng này ra khỏi hệ thống?');" })</li>
                    <li>@Html.ActionLink("Cancel", "CancelHotel", "Home")</li>
                    <li>
                        <span>Actions</span>
                        <ul>
                            <li><a href="#" title="Approve property">Approve property</a></li>
                            <li><a href="#" title="View facilities">View facilities</a></li>
                            <li>
                                <span>Translation</span>
                                <ul>
                                    <li><a href="#" title="Tiếng Việt">Tiếng Việt</a></li>
                                    <li><a href="#" title="French">French</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
                <!-- functions.end -->

            </div>
            <!-- panel.end -->

        </div>
   
<script type="text/javascript">
    $(function () {
        $('a#submit_link').click(function () {
            $('form#Submitform').submit();
        });
    });
</script>
