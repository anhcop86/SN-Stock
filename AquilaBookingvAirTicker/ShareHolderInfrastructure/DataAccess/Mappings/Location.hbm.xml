<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="true" namespace="ShareHolderCore.Domain.Model" assembly="ShareHolderCore">
	<class name="ShareHolderCore.Domain.Model.Location,ShareHolderCore" table="Location" lazy="true">

		<!-- Primary Key(s) -->
		<id name="LocationID" column="LocationID" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>
		
		<!-- Foreign Keys not mapped as Many-To-One relations -->
		<property column="LanguageID" type="Byte" name="LanguageID" />
		
		<!-- Properties -->
		<property column="Name" type="String" name="Name" not-null="true" length="100" />
		
		<!-- One-To-Many relations -->
		<bag name="ListLocationCity" generic="true" inverse="true" cascade="none" lazy="true">
			<key column="LocationID"/>
			<one-to-many class="ShareHolderCore.Domain.Model.LocationCity,ShareHolderCore" />
		</bag>
		
	</class>
</hibernate-mapping>
