<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="true" namespace="ShareHolderCore.Domain.Model" assembly="ShareHolderCore">
  <class name="ShareHolderCore.Domain.Model.Country,ShareHolderCore" table="Country" lazy="true">

    <!-- Primary Key(s) -->
    <id name="CountryId" column="CountryId" type="Int16" unsaved-value="0">
      <generator class="native"/>
    </id>

    <!-- Properties -->
    <property column="Name" type="String" name="Name" length="10" />
    <property column="EnglishName" type="String" name="EnglishName" length="70" />
    <property column="CreatedDate" type="String" name="CreatedDate" length="14" />
    <property column="CreatedBy" type="String" name="CreatedBy" length="14" />
    

    <!-- One-To-Many relations -->
    <bag name="ListProvince" generic="true" inverse="true" cascade="none" lazy="true">
      <key column="CountryId"/>
      <one-to-many class="ShareHolderCore.Domain.Model.Province,ShareHolderCore"  />
    </bag>

  </class>
</hibernate-mapping>

