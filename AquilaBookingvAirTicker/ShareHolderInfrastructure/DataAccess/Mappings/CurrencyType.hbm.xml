<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="true" namespace="ShareHolderCore.Domain.Model" assembly="ShareHolderCore">
  <class name="ShareHolderCore.Domain.Model.CurrencyType,ShareHolderCore" table="CurrencyType" lazy="true">

    <!-- Primary Key(s) -->
    <id name="CurrencyTypeId" column="CurrencyTypeId" type="byte" unsaved-value="0">
      <generator class="native"/>
    </id>

    <!-- Properties -->
    <property column="CurrencyCode" type="String" name="CurrencyCode" length="5" />
    <property column="Name" type="String" name="Name" length="30" />
    <property column="EnglishName" type="String" name="EnglishName" length="70" />
    <property column="CreatedDate" type="String" name="CreatedDate" length="14" />
    <property column="CreatedBy" type="String" name="CreatedBy" length="14" />
    

    <!-- One-To-Many relations -->
    <bag name="ListAvailabilityHist" generic="true" inverse="true" cascade="none" lazy="true">
      <key column="CurrencyTypeId"/>
      <one-to-many class="ShareHolderCore.Domain.Model.AvailabilityHist,ShareHolderCore" />
    </bag>

    <bag name="ListAvailability" generic="true" inverse="true" cascade="none" lazy="true">
      <key column="CurrencyTypeId"/>
      <one-to-many class="ShareHolderCore.Domain.Model.Availability,ShareHolderCore" />
    </bag>

    <bag name="ListBookingDetail" generic="true" inverse="true" cascade="none" lazy="true">
      <key column="CurrencyTypeId"/>
      <one-to-many class="ShareHolderCore.Domain.Model.BookingDetail,ShareHolderCore" />
    </bag>

  </class>
</hibernate-mapping>

