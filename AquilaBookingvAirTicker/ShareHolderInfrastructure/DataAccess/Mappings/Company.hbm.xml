<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="true" namespace="ShareHolderCore.Domain.Model" assembly="ShareHolderCore">
	<class name="ShareHolderCore.Domain.Model.Company,ShareHolderCore" table="Company" lazy="true">

		<!-- Primary Key(s) -->
		<id name="CompanyId" column="CompanyId" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>
		
		<!-- Foreign Keys not mapped as Many-To-One relations -->
		<property column="ShareSymbol" type="String" name="ShareSymbol" not-null="true" length="50" />
		
		<!-- Properties -->
		<property column="Name" type="String" name="Name" not-null="true" length="255" />
		<property column="EnglishName" type="String" name="EnglishName" length="255" />
		<property column="Martket" type="String" name="Martket" length="10" />
		<property column="TotalShare" type="Int64" name="TotalShare" />
		<property column="Address" type="String" name="Address" length="100" />
		<property column="Telephone" type="String" name="Telephone" length="20" />
		<property column="Fax" type="String" name="Fax" length="20" />
		<property column="Website" type="String" name="Website" length="20" />
		<property column="Capital" type="Int64" name="Capital" />
		<property column="IssueDate" type="DateTime" name="IssueDate" />
		<!-- One-To-Many relations -->
		<bag name="ListTransactionDetail" generic="true" inverse="true" cascade="none" lazy="true">
			<key column="ShareSymbol"/>
			<one-to-many class="ShareHolderCore.Domain.Model.TransactionDetail,ShareHolderCore" />
		</bag>
	</class>
	<sql-query name="spCompanyGetByUserId">
		<query-param name="UserId"  type="String"   />	

		<return-scalar column="CompanyId"  type="Int32" />
		<return-scalar column="ShareSymbol"  type="String" />
		<return-scalar column="Name"  type="String"  />
		<return-scalar column="EnglishName" type="String"    />
		<return-scalar column="Martket" type="String"     />
		<return-scalar column="TotalShare"   type="Int64"    />
		<return-scalar column="Address"   type="String"  />
		<return-scalar column="Telephone"  type="String"  />
		<return-scalar column="Fax"  type="String"    />
		<return-scalar column="Website"  type="String"  />
		<return-scalar column="Capital"  type="Int64"   />
		<return-scalar column="IssueDate" type="DateTime"   />

		exec spCompanyGetByUserId		:UserId
	</sql-query>
</hibernate-mapping>
