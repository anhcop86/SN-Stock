<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="true" namespace="ShareHolderCore.Domain.Model" assembly="ShareHolderCore">
  <class name="ShareHolderCore.Domain.Model.BookingDetail,ShareHolderCore" table="BookingDetail" lazy="true">

    <!-- Primary Key(s) -->
    <id name="BookingDetailId" column="BookingDetailId" type="Int64" unsaved-value="0">
      <generator class="native"/>
    </id>

    <!-- Properties -->
    
    <property column="HotelId" type="Int32" name="HotelId"/>    
    <property column="Quantity" type="Int32" name="Quantity"/>
    <property column="Price" type="Decimal" name="Price"/>    
    
    <property column="FromDate" type="String" name="FromDate" length="14" />
    <property column="ToDate" type="String" name="ToDate" length="14" />
    <property column="Remark" type="String" name="Remark" length="4000" />
    <property column="CreatedDate" type="String" name="CreatedDate" length="14" />
    <property column="CreatedBy" type="String" name="CreatedBy" length="14" />
    
    <property column="AirLine" type="String" name="AirLine" length="20" />
    <property column="IssueDate" type="String" name="IssueDate" length="14" />
    <property column="PassengerName" type="String" name="PassengerName" length="70" />
    <property column="Departure" type="String" name="Departure" length="150" />
    <property column="Arrival" type="String" name="Arrival" length="150" />
    <property column="Fare" type="decimal" name="Fare" />
    <property column="Fees" type="decimal" name="Fees" />
    <property column="BookingType" type="String" name="BookingType" length="1" />
    <property column="BookCode" type="String" name="BookCode" length="10" />
    <property column="FlightNumber" type="String" name="FlightNumber" length="8" />
    <property column="CancelQuantity" type="Int32" name="CancelQuantity" />
   
    <!--Many to one-->

    <many-to-one name="RoomType"  column="RoomTypeId" class="ShareHolderCore.Domain.Model.RoomType,ShareHolderCore" lazy="false" />
    <many-to-one name="CurrencyType"  column="CurrencyTypeId" class="ShareHolderCore.Domain.Model.CurrencyType,ShareHolderCore" />
    <many-to-one name="Booking"  column="BookingId" class="ShareHolderCore.Domain.Model.Booking,ShareHolderCore" />

    <!-- One-To-Many relations -->
    <!--<bag name="ListHotelFacility" generic="true" inverse="true" cascade="none" lazy="true">
      <key column="FacilityId"/>
      <one-to-many class="ShareHolderCore.Domain.Model.HotelFacility,ShareHolderCore" />
    </bag>-->

  </class>
</hibernate-mapping>

