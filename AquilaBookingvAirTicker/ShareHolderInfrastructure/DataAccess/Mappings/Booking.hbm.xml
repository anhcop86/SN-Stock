<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="true" namespace="ShareHolderCore.Domain.Model" assembly="ShareHolderCore">
  <class name="ShareHolderCore.Domain.Model.Booking,ShareHolderCore" table="Booking" lazy="true">

    <!-- Primary Key(s) -->
    <id name="BookingId" column="BookingId" type="Int64" unsaved-value="0">
      <generator class="native"/>
    </id>

    <!-- Properties -->
    <property column="BookingDate" type="String" name="BookingDate" length="14" />       
    <property column="FullName" type="String" name="FullName" length="255" />
    <property column="PaymentType" type="String" name="PaymentType" length="10" />
    <property column="Email" type="String" name="Email" length="127" />
    <property column="PhoneNumber" type="String" name="PhoneNumber" length="20" />
    <property column="ArrivalDate" type="String" name="ArrivalDate" length="8" />
    <property column="ArrivalTime" type="String" name="ArrivalTime" length="8" />
    
    <property column="Remark" type="String" name="Remark" length="255" />
    <property column="ViewCode" type="String" name="ViewCode" length="50" />
    <property column="IpAddress" type="String" name="IpAddress" length="255" />
    <property column="OrderStatus" type="String" name="OrderStatus" length="1" />
    
    <property column="CreatedDate" type="String" name="CreatedDate" length="14" />
    <property column="CreatedBy" type="String" name="CreatedBy" length="14" />
    <!--Many to one-->

    <many-to-one name="Membership"  column="MemberId" class="ShareHolderCore.Domain.Model.Membership,ShareHolderCore" lazy="false" />
    

     <!--One-To-Many relations--> 
    <bag name="ListBookingDetail" generic="true" inverse="true" cascade="none" lazy="true">
      <key column="BookingId"/>
      <one-to-many class="ShareHolderCore.Domain.Model.BookingDetail,ShareHolderCore" />
    </bag>

  </class>
</hibernate-mapping>

