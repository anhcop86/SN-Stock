<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="true" namespace="ShareHolderCore.Domain.Model" assembly="ShareHolderCore">
	<class name="ShareHolderCore.Domain.Model.ContentItem, ShareHolderCore" table="ContentItem" lazy="true">

		<!-- Primary Key(s) -->
		<id name="ContentItemId" column="ContentItemId" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>
		
		<!-- Properties -->
		<property column="Title" type="String" name="Title" not-null="false" length="1000" />
		<property column="Content" type="String" name="Content" not-null="true" length="4000" />
		<property column="LastUpdate" type="String" name="LastUpdate" length="14" />
		<property column="VerticalPosition" type="Int32" name="VerticalPosition" />
		<property column="UserID"  type="Int32" name="UserID" />
    <property column="Display" type="String" name="Display" length="50" />
    <property column="SiteHome" type="String" name="SiteHome" length="50" />
    <property column="StartPub" type="String" name="StartPub" length="14" />
    <property column="EndPub" type="String" name="EndPub" length="14" />
    <property column="TemplateID" type="Int32" name="TemplateID" />
    <property column="ObjectCode" type="String" name="ObjectCode" length="100" />
    <property column="MetaTagKeyWord" type="String" name="MetaTagKeyWord" length="2000" />
    <property column="MetaTagDescription" type="String" name="MetaTagDescription" length="3000" />
    <property column="Type" type="String" name="Type" length="10" />
    <property column="Picture" type="String" name="Picture" length="255" />
    <property column="NewHeadLine" type="String" name="NewHeadLine" length="4000" />
    <property column="NewDate" type="String" name="NewDate" length="14" />
    <property column="EventLocation" type="String" name="EventLocation" length="1000" />
    <property column="EventTime" type="String" name="EventTime" length="14" />

    <many-to-one name="ContentCategory"  column="ContentCategoryId" class="ShareHolderCore.Domain.Model.ContentCategory,ShareHolderCore" />
    <many-to-one name="Language"  column="LanguageId" class="ShareHolderCore.Domain.Model.Language,ShareHolderCore" />
