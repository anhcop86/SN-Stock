<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="contentLogin" style="margin-top: 30px;">
<div style="margin-top:10px; margin-left:20px">@Html.ValidationSummary(true, "")</div>

@using (Html.BeginForm((string)ViewBag.FormAction, "Account")) {
    <fieldset>
        <br /> 
        <strong><span style="margin-left:20px">@Resources.Resource.registerMsg</span></strong>      
        <table>
            <tr>
                <td> @Resources.Resource.loginId</td>
                <td> @Html.TextBoxFor(m => m.UserName, new { style = "width:250px"})</td>
                <td>@Html.ValidationMessageFor(m => m.UserName)</td>
            </tr>
             <tr>
                <td> @Resources.Resource.fullName</td>
                <td> @Html.TextBoxFor(m => m.MemberName, new { style = "width:250px" })</td>
                <td>@Html.ValidationMessageFor(m => m.MemberName)</td>
            </tr>
            <tr>
                <td> @Resources.Resource.emailAddress</td>
                <td> @Html.TextBoxFor(m => m.Email, new { style = "width:250px" })</td>
                <td> @Html.ValidationMessageFor(m => m.Email)</td>
            </tr>
            <tr>
                <td>@Resources.Resource.password</td>
                <td>@Html.PasswordFor(m => m.Password, new { style = "width:250px" })</td>
                <td>@Html.ValidationMessageFor(m => m.Password)</td>
            </tr>
             <tr>
                <td>@Resources.Resource.confirmPass</td>
                <td>@Html.PasswordFor(m => m.ConfirmPassword, new { style = "width:250px" })</td>
                <td>@Html.ValidationMessageFor(m => m.ConfirmPassword)</td>
            </tr>
        </table>
        <input style="background: none repeat scroll 0 0 #1B75BB; border-radius: 5px 5px 5px 5px; width:90px; height:26px; border:0; margin-left:20px; margin-bottom:10px;  color: #FFFFFF;" type="submit" value="@Resources.Resource.register" title="Register" />
    </fieldset>
}
  </div>