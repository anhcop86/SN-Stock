@model ShareHoderFrontEndV2.Models.ProfileModel

@{
    ViewBag.Title = @Resources.UserInterface.myProfile;
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
   
@Html.ValidationSummary(true, "Hồ sơ lưu không thành công. vui lòng nhập đầy đủ thông tin dưới đây.")

@using (Html.BeginForm("MyProfile", "Account", FormMethod.Post, new { id= "ProfileFrm"}))
{
   <div class="logon">
        <div data-role="fieldcontain" class="ui-hidden-accessible" theme="e" data-mini="true">
            @Html.LabelFor(m => m.LoginId):
            @Html.DisplayFor(m => m.LoginId)
            @Html.ValidationMessageFor(m => m.LoginId)
        </div>
        <div data-role="fieldcontain" class="ui-hide-label">
            @Html.LabelFor(m => m.UserName):
            @Html.DisplayFor(m => m.UserName)
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
        <div data-role="fieldcontain" class="ui-hide-label" theme="e">            
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div data-role="fieldcontain" class="ui-hide-label" theme="e">       
            @Html.LabelFor(m => m.IsLockedOut)
            @Html.CheckBoxFor((m => m.IsLockedOut), new { disabled = "disabled" })
            @Html.ValidationMessageFor(m => m.IsLockedOut)
        </div>
        <div data-role="fieldcontain" class="ui-hide-label" theme="e">    
            @Html.LabelFor(m => m.LastLoginDate):
            @Html.DisplayFor(m => m.LastLoginDate)
            @Html.ValidationMessageFor(m => m.LastLoginDate)
         </div> 
        <div data-role="controlgroup" data-type="horizontal" data-mini="true">
            <a href="../Home" data-role="button" data-icon="back" data-theme="e" title="@Resources.UserInterface.goBackHint" >@Resources.UserInterface.goBack</a>        
            <input type="submit"  value='@Resources.ValidationMessage.saveProfile' title="@Resources.ValidationMessage.saveProfile" data-icon="check" data-theme="e"/>
        </div>
    </div>
}



