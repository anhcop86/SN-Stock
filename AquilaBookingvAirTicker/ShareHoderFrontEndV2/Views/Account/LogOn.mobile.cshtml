@model ShareHoderFrontEndV2.Models.LogOnModel

@{
    ViewBag.Title = Resources.UserInterface.logOn;
}


@Html.ValidationSummary(true, Resources.UserInterface.logonFailed)

@using (Html.BeginForm((string)ViewBag.FormAction, "Account", FormMethod.Post, new { id = "logon"}))
{
    <fieldset>
        <legend>@Resources.UserInterface.systemLogOn</legend>
         <div data-role="fieldcontain" class="ui-hidden-accessible" theme="e" data-mini="true">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
          </div>
          <div data-role="fieldcontain" class="ui-hidden-accessible" theme="e" data-mini="true">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
          </div>
        
          <div data-role="fieldcontain" class="ui-hidden-accessible" theme="e" data-mini="true">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
           </div>
          <div data-role="fieldcontain" class="ui-hidden-accessible" theme="e" data-mini="true">
                <a href="@Url.Action("ResetPassword", "Account")" data-role="button">@Resources.UserInterface.forgotpassword</a>   
              
          </div>
          <div data-role="fieldcontain"  >                
                <input type="submit"  id="logonButton" value='@Resources.UserInterface.logOn' title="@Resources.UserInterface.logonHint" data-icon="check" data-theme="e"/>
            </div>        
       
    </fieldset>
    <p class="alert-message">
        Nếu Quý khách chưa có tài khoản, vui lòng <a href="http://www.vfs.com.vn/Contact.aspx" target="_blank">liên hệ</a> chúng tôi.  
    </p>
}