 @model IEnumerable<ShareHolderCore.Domain.Model.TransactionBalance>

@{
    var grid = new WebGrid(Model, rowsPerPage: 20, ajaxUpdateContainerId: "summaryCurrentBalance");
    @grid.GetHtml(tableStyle: "webGrid",
                htmlAttributes: new { id = "DataTable" },
                headerStyle: "header",
                alternatingRowStyle: "alt",

                columns: grid.Columns(
                        grid.Column("ShareHolderCode", Resources.UserInterface.shareHolderCode01, style: "stringCell"),
                        grid.Column("Name", Resources.UserInterface.shareHolderName, style: "stringCell"),
                        grid.Column("ShareSymbol", Resources.UserInterface.shareSymbol, style: "stringCell"),
                        grid.Column("Ssn", Resources.UserInterface.ssn, style: "stringCell"),
                        grid.Column("OpenningBalance", Resources.UserInterface.beginBalance, format: @<text>@item.OpenningBalance.ToString("#,#")</text> , style: "numberCell"),
                        grid.Column("Credit", Resources.UserInterface.creditDescription, format: @<text> @item.Credit.ToString("#,#")</text>, style: "numberCell"),
                        grid.Column("Debit", Resources.UserInterface.debitDescription, format: @<text> @item.Debit.ToString("#,#")</text>, style: "numberCell"),
                        grid.Column("Balance", Resources.UserInterface.balanceQuantity, format: @<text> @item.Balance.ToString("#,#")</text>, style: "numberCell")));
}