 @model IEnumerable<ShareHolderCore.Domain.Model.TransactionDetailOfShareHolder>

@{
    var grid = new WebGrid(Model, rowsPerPage: 20, ajaxUpdateContainerId: "currentBalance");
    @grid.GetHtml(tableStyle: "webGrid",
                htmlAttributes: new { id = "DataTable" },
                headerStyle: "header",
                alternatingRowStyle: "alt",
              
                columns: grid.Columns(
                        grid.Column("TransactionNumber", Resources.UserInterface.transactionNumber, style: "stringCell"),
                        grid.Column("TransactionDate", Resources.UserInterface.date, format: @<text>@item.TransactionDate.ToString("dd/MM/yyyy")</text>, style: "stringCell"),
                        grid.Column("Credit", Resources.UserInterface.creditDescription, format: @<text>@item.Credit.ToString("#,#")</text>, style: "numberCell"),
                                                                                                            grid.Column("Debit", Resources.UserInterface.debitDescription, format: @<text>@item.Debit.ToString("#,#")</text> , style: "numberCell"),
                                                                                                                                                                                                                                                                                                                                                                                                    grid.Column("CurrentBalance", Resources.UserInterface.quantity, format: @<text> @item.CurrentBalance.ToString("#,#")</text>, style: "numberCell"),
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        grid.Column("DescriptionType", Resources.UserInterface.type, style: "stringCell"),
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        grid.Column("InteractiveShareHolder", Resources.UserInterface.shareHolderCode, style: "stringCell"),
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        grid.Column("Note", Resources.UserInterface.remark, style: "stringCell")));
}