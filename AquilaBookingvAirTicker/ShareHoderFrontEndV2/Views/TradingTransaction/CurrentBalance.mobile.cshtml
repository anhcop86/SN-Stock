@model  IEnumerable<ShareHolderCore.Domain.Model.TransactionDetailOfShareHolder>

@{
    ViewBag.Title = @Resources.UserInterface.searchCurrentBalance;
}

 
    @using (Html.BeginForm("SearchCurrentBalance", "TradingTransaction", FormMethod.Get, new { id = "currentBalance" }))
    {
       <input type="hidden" id="todatepicker" name="todatepicker"/>
        <div data-role="fieldcontain" class="ui-hidden-accessible" theme="e" data-mini="true" data-native-menu="false">
            @Html.Label(Resources.UserInterface.shareSymbolOrShareHolder)
            @Html.DropDownList("Id", (SelectList)ViewBag.ShareHolderId)
        </div>
        <div data-role="fieldcontain">                                                                                                                                                                                                                                           <fieldset data-role="controlgroup"   >
             <fieldset>
                <legend>@Resources.UserInterface.toDate</legend>
                <select name="toDay" id="toDay" data-native-menu="false" data-placeholder="true" >
                     <option value="01">01</option>
                <option value="02">02</option>
                <option value="03">03</option>
                <option value="04">04</option>
                <option value="05">05</option>
                <option value="06">06</option>
                <option value="07">07</option>
                <option value="08">08</option>
                <option value="09">09</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
                <option value="13">13</option>
                <option value="14">14</option>
                <option value="15">15</option>
                <option value="16">16</option>
                <option value="17">17</option>
                <option value="18">18</option>
                <option value="19">19</option>
                <option value="20">20</option>
                <option value="21">21</option>
                <option value="22">22</option>
                <option value="23">23</option>
                <option value="24">24</option>
                <option value="25">25</option>
                <option value="26">26</option> 
                <option value="27">27</option> 
                <option value="28">28</option> 
                <option value="29">29</option>
                <option value="30">30</option> 
                <option value="31">31</option>                  
                </select>

                <select name="toMonth" id="toMonth" data-mini="true" data-native-menu="false" data-placeholder="true"    >
                     <option value="01">Tháng giêng</option>
                     <option value="02">Tháng hai</option>
                     <option value="03">Tháng ba</option>
                     <option value="04">Tháng tư</option>
                     <option value="05">Tháng năm</option>
                     <option value="06">Tháng sáu</option>
                     <option value="07">Tháng bảy</option>
                     <option value="08">Tháng tám</option>
                     <option value="09">Tháng chín</option>
                     <option value="10">Tháng muời</option>
                     <option value="11">Tháng muời một</option>
                     <option value="12">Tháng mười hai</option> 
                </select> 
                <select name="toYear" id="toYear" data-mini="true" data-native-menu="false" data-placeholder="true" >
                @{
        for (int i = 2008; i <= DateTime.Now.Year; i++)
        { 
                       <option value="@i">@i</option>
        }
                 }
                </select>
              </fieldset>
        </div>
        <div data-role="controlgroup" data-type="horizontal" >
            <a href="../Home" data-role="button" data-icon="back" data-theme="e"  title="@Resources.UserInterface.goBackHint">@Resources.UserInterface.goBack</a>        
            <input id="search" type="submit"  value='@Resources.UserInterface.view' title="@Resources.UserInterface.viewHint" data-icon="check" data-theme="e"/>
        </div>
    }   

<script type="text/javascript">
   
        var fullDate = new Date();        
        var twoDigitToMonth = ((fullDate.getMonth().length + 1) === 1) ? (fullDate.getMonth() + 1) : '0' + (fullDate.getMonth() + 1);       

        $("#toDay").val(fullDate.getDate());
        $("#toMonth").val(twoDigitToMonth);
        $("#toYear").val(fullDate.getFullYear());    

    $("#search").click(function () {
        var todate = $("#toDay").val() + "/" + $("#toMonth").val() + "/" + $("#toYear").val();
          $('input[name=todatepicker]').val(todate);       
    });   
     
</script>
