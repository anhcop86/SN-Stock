@using (Html.BeginForm("CheckServices", "BookingHistory", FormMethod.Get, new { id = "checkbookForm" }))
{
<div class="box-main" style="min-height:140px">
<div class="box box-pha">
    <div id="StatusBox">
        <div id="AdminStatus" runat="server" style="display:none"></div>
    </div>
<table cellpadding="0" cellspacing="0" class="form-pay">
    <tr>
        <td><b style="color:Red">*</b>@Resources.Resource.bookingCode</td>
        <td><input type="text" id="CodeNumberService" name="CodeNumberService" style="width:200px" /></td>
    </tr>
    <tr>
        <td><b style="color:Red"></b></td>
    </tr>
</table>
<input id="paymentButton" style="background: none repeat scroll 0 0 #1B75BB; cursor:pointer; border-radius: 5px 5px 5px 5px; width:130px; height:40px; border:0; margin-left:20px; margin-bottom:10px;  color: #FFFFFF;" type="submit" value="@Resources.Resource.checkYourBooking" title="@Resources.Resource.checkYourBooking" />
</div><!--box-->
</div><!--box-main-->
}
<script type="text/javascript">
<!--
    var TabbedPanels1 = new Spry.Widget.TabbedPanels("TabbedPanels1");
//-->
</script>

 <script type="text/javascript">
     $("#paymentButton").click(function (e) {
         if ($("#CodeNumberService").val() == '') {
             ShowStatus("warning", "Quý khách cần điền đầy đủ thông tin bên dưới");
             $("#searchInput").focus();
             e.preventDefault();
             return;
         } else {
             $("#checkbookForm").submit();
         }
     });
</script>

