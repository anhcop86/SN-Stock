 <script type="text/javascript">


     $("#paymentButton").click(function (e) {
         if ($("#CodeNumberService").val() == '') {
             ShowStatus("warning", "Quý khách cần điền đầy đủ thông tin bên dưới");
             $("#searchInput").focus();
             e.preventDefault();
             return;
         } else {
             $("#checkbookForm").submit();
         }


     });


</script>

