</div>
 <div id="messageinfoCart" title="Thông tin" style="display:none">
              <p id>
                <span class="ui-icon ui-icon-circle-check" style="float: left; margin: 0 7px 50px 0; "></span>
                    @Resources.Resource.noItemsInCart
              </p>
             
            </div>
 <script type="text/javascript">
     $().ready(function () {
         $("#pamentButton").click(function (e) {             
             if ('@numberofCart' == 0) {
                 $("#messageinfoCart").dialog("open");
                 e.preventDefault();
                 return;
             }
         });
         $("#messageinfoCart").dialog({
             autoOpen: false,
             modal: true,
             buttons: {
                 Ok: function () {
                     $(this).dialog("close");
                 }
             }
         });

     });
       </script>  