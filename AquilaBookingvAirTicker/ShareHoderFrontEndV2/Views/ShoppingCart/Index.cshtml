@{
    ViewBag.Title = @Resources.Resource.home;
}

<div class="box-cart" style="margin-top: 30px;">
    <table cellpadding="0" cellspacing="0" class="pricing">
        <tr>
        <th>@Resources.Resource.HotelName</th>
        <th>@Resources.Resource.RoomType</th>
        <th>@Resources.Resource.fromDate</th>
        <th>@Resources.Resource.toDate</th>
        <th>@Resources.Resource.numberOfDate</th>
        <th>@Resources.Resource.quantity</th>
        <th>@Resources.Resource.PriceHotel</th>
        <th>@Resources.Resource.vat</th>
        <th>@Resources.Resource.amount</th>
       
        <th></th>
    </tr>
       @{
           int numberofCart = int.Parse(ViewData["NumberCartItem"].ToString());
           decimal? totalMoney = 0;   
        }
    @foreach (var item in Model)
    {
        totalMoney += item.Subtotal;
        <tr>
            <td>
            @item.Prod.Availability.Hotel.Name
        </td>
        <td>
            @item.Prod.Availability.RoomType.Name
            
        </td>
        <td>
            @item.FromDate
           
        </td>
        <td>
            @item.ToDate
           
        </td>
         <td>
            @item.TotalDate
           
        </td>
            <td>
            
            @item.NoRoom
           
        </td>
        <td>
            
            @string.Format(System.Globalization.CultureInfo.GetCultureInfo("en-US"), "{0,0:N0}", @item.Prod.Availability.Price)
           
        </td>
        <td>
            10%
            
        </td>
        <td>          
            @string.Format(System.Globalization.CultureInfo.GetCultureInfo("en-US"), "{0,0:N0}", @item.Subtotal)
        </td>
        <td>
            @Html.ActionLink(" ", "RemoveShoppingCart", "ShoppingCart", new { idbooking = @item.Prod.Availability.AvailabilityId }, new { style = "background: url('" + Url.Content("~/images/deletecart.gif") + "') no-repeat center right; display:block;  height: 17px; width: 16px;" })                                                                                                        
            
        </td>
        </tr>
    }
</table>
