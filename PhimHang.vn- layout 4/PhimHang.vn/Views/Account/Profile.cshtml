<body class="user-profile">
    <section id="page" role="application">
        <header id="heading" role="heading">
            <div class="banner" role="banner">
                <h1><a href="/">cungphim.com</a></h1>
            </div>
            <div style="clear: both"></div>
        </header>
        <div class="container">
            <div class="row" style="padding-top: 75px;">

                <div class="row">
                    <div class="span12">
                        <div class="user-details">
                            @{
                                string avata = Model.Avata;
                            }
                            <img class="gravatar" src="@avata?width=48&height=48&mode=crop" />
                            <span class="name">@Model.UserName</span>
                        </div>
                        <hr />
                    </div>
                </div>
                <div class="tabbable tabs-left">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#profile" data-toggle="tab">Hồ sơ cá nhân</a></li>
                        <li><a href="#philosophy" data-toggle="tab">Trường phái đầu tư</a></li>
                        <li><a href="#changePassword" data-toggle="tab">Mật khẩu</a></li>
                        @*<li><a href="#identityProviders" data-toggle="tab">Identity Providers</a></li>*@
                    </ul>
                    <div class="tab-content">
                        <div class="account-details tab-pane active" id="profile">     
                            @using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="control-group">
                                    <label class="control-label" for="username">Avata:</label>
                                    <div class="controls">
                                        <input type="file" id="avataInput" name="username" value="" class="input-xlarge" placeholder="Username" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="confirmUsername">Cover:</label>
                                    <div class="controls">
                                        <input type="file" id="coverInput" name="confirmUsername" value="" class="input-xlarge" placeholder="Confirm Username" />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="username">Họ và tên:</label>
                                    <div class="controls">
                                        @*<input type="text" id="mobileInput" name="username" value="" class="input-xlarge" />*@
                                        @Html.TextBoxFor(m => m.FullName, new { @class = "input-xlarge" })
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="username">Điện thoại:</label>
                                    <div class="controls">                                        
                                        @Html.TextBoxFor(m => m.Mobile, new { @class = "input-xlarge" })
                                        @Html.ValidationMessageFor(m => m.Mobile, "", new { @style = "color: #D81D35;" })
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="username">Email:</label>
                                    <div class="controls">
                                        <input type="text" id="emailInput" name="username" value="" class="input-xlarge" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="username">Nghề nghiệp:</label>
                                    <div class="controls">
                                        <input type="text" id="jobInput" name="username" value="" class="input-xlarge" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="username">Status:</label>
                                    <div class="controls">
                                        <textarea id="statusInput" name="statustextArea" class="form-control" placeholder="Chia sẽ cảm nghĩ về thị trường?" rows="3" style="width:500px"></textarea>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="username">Home facebook:</label>
                                    <div class="controls">
                                        <input type="text" id="username" name="username" value="" class="input-xlarge" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="username">Giới thiệu bản thân:</label>
                                    <div class="controls">
                                        <textarea id="statusInput" name="statustextArea" class="form-control" placeholder="Sở thích, thế mạnh...?" rows="3" style="width:500px"></textarea>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls">
                                        <input type="submit" class="btn" value="Lưu lại" />
                                        <p class="text-success">@ViewBag.StatusMessage</p>
                                    </div>
                                </div>
                                <input type="hidden" name="NCSRF" value="" />
                            }
                        </div>
                        <div class="account-details tab-pane hide" id="philosophy">
                            <form class="form-horizontal" action="" method="POST">
                                <div class="control-group">
                                    <label class="control-label" for="username">Trải nghiệm thị trường:</label>
                                    <div class="controls">
                                        <input type="text" id="username" name="username" value="" class="input-xlarge"/>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="confirmUsername">Trường phái giao dịch:</label>
                                    <div class="controls">
                                        <input type="text" id="confirmUsername" name="confirmUsername" value="" class="input-xlarge"/>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls">
                                        <input type="submit" class="btn" value="Lưu lại" />
                                    </div>
                                </div>
                                <input type="hidden" name="NCSRF" value="" />
                            </form>
                        </div>
                        <div class="account-details tab-pane hide" id="changePassword">
                            <form class="form-horizontal" action="/account/changepassword#changePassword" method="POST">

                                <div class="control-group">
                                    <label class="control-label" for="oldPassword">Current Password</label>
                                    <div class="controls">
                                        <input type="password" id="oldPassword" name="oldPassword" value="" class="input-xlarge" placeholder="Current Password" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="password">Password</label>
                                    <div class="controls">
                                        <input type="password" id="password" name="password" value="" class="input-xlarge" placeholder="Password" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="confirmPassword">Confirm Password</label>
                                    <div class="controls">
                                        <input type="password" id="confirmPassword" name="confirmPassword" value="" class="input-xlarge" placeholder="Confirm Password" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls">
                                        <input type="submit" class="btn" value="Lưu lại" />
                                    </div>
                                </div>
                                <input type="hidden" name="NCSRF" value="" />
                            </form>
                        </div>
                        @*<div class="account-details tab-pane hide" id="identityProviders">
                            <div class="control-group">
                                <div class="controls">
                                    <form action="/account/unlink" method="POST">
                                        <ul class="inline">
                                            <li><a class="btn btn-provider" href="/authentication/redirect/facebook"><i class="icon-facebook"></i> Facebook</a></li>
                                        </ul>
                                        <ul class="inline">
                                            <li><a class="btn btn-provider" href="/authentication/redirect/twitter"><i class="icon-twitter"></i> Twitter</a></li>
                                        </ul>
                                        <ul class="inline">
                                            <li><a class="btn btn-provider" href="/authentication/redirect/google"><i class="icon-google"></i> Google</a></li>
                                        </ul>
                                        <input type="hidden" name="NCSRF" value="" />
                                    </form>
                                </div>
                            </div>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>    
    <script src="~/ThemeBlue/bootstrap-twiter/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        (function ($) {
            // set the selected tab based on the hash
            var currentSection = document.location.hash || "#profile";
            $('a[href="' + currentSection + '"]').tab('show');

            // always set the hash when we change tabs
            $('a[data-toggle="tab"]').on('shown', function (e) {
                document.location.hash = e.target.hash;
            });

            // make sure errors look pretty and bootstrap-y
            $('input.error').closest('.control-group').addClass('error');
        }(jQuery));
    </script>
</body>
