<div class="user-info2">
    <div class="user-profile">
        <div class="user-img-2">
            <img src="@ViewBag.AvataImageUrlCurrent?width=98&height=98&mode=crop" alt="cover">
        </div>
    </div>
    <div class="user-name2">
        @Model.FullName   
        <i class="fa  fa-check-circle">&nbsp;</i>
    </div>
    
    <div class="user-info-detail">
        <div class="user-info-intro">
            <div title="Cập nhật trong hồ sơ cá nhân của bạn"><b>STATUS</b></div>
            <hr />
            @{
                if (string.IsNullOrEmpty(Model.Status))
                {
                    @: ...
                }
                else
                {
                    @: @Model.Status
                }
            }            
        </div>
        <div><i class="fa fa-map-marker"></i>&nbsp;Trường phái đầu tư: 
        @{
            if (Model.PhilosophyMarket != null)
            {
                @: @Model.Philosophy.PhilosophyName
            }
            else
            {
                @: ...
            }
        }
        </div>
        <div>
            <i class="fa fa-map-marker"></i> &nbsp;Nghề nghiệp:
            @{
                if (Model.JobTitle != null)
                {
                    @: @Model.JobTitile.JobName
                }
                else
                {
                    @: ...
                }
            }
        </div>
        <div><i class="fa fa-unlink"></i> Kinh nghiệm chứng trường: 
            @{
               
                if (Model.NumberExMarketYear != null)
                {
                     @:@Model.NumberExMarketYear năm
                }
                else
                {
                    @: ...
                }
            }
        </div>
        <div><i class="fa fa-clock-o"></i> Giới thiệu bản thân</div>
        <div class="user-info-intro">          
            @{
                if (string.IsNullOrEmpty(Model.CVInfo))
                {
                    @: ...
                }
                else
                {
                    @: @Model.CVInfo
                }
            }
        </div>
        <div class="user-info-mypage">
            <p><i class="fa fa-home"></i> Homepage:</p>            
            @{
                @: <a target="_blank" href="@Model.URLFacebook">@Model.URLFacebook</a>
            }
        </div>
    </div>
</div>
          