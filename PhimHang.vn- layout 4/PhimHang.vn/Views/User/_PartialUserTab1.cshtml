    function removeFileChart() {
        if(confirm("Bạn muốn xóa file hình này?"))
        {
            $('.chartImage').hide();
            $('.mb3-chart-thumb').removeAttr("src");
        }
    }

    function uploadPreview(files) {
        file = files[0];

        if (file.size > 3000000) {
            alert("File hình thật là lớn, nhỏ lại thôi?");
            return;
        }
        var ext = file.name.split('.').pop().toLowerCase();
        if ($.inArray(ext, [ 'png', 'jpg', 'jpeg']) == -1) {
            alert('File hình không đúng định dạng!');
            return;
        }
        // Add the uploaded image content to the form data collection
        if (files.length > 0) {
            var formData = new FormData();
            formData.append("UploadedImage", file);

            //upload via ajax
            $.ajax({
                url: '@Url.Action("UploadFileChart", "Post")',
                type: 'POST',
                data: formData,
                cache: false,
                contentType: false,
                processData: false
            }).done(function (data) {
                if (data === "error") {
                    alert("somethign wrong happened, please refresh the page")
                    return
                }
                else {
                    $('.chartImage').show();
                    $('.mb3-chart-thumb').attr("src", data);
                }
            }).fail(function () {
                alert('upload file lỗi, xin vui lòng thử lại');
            })
        }


    }
