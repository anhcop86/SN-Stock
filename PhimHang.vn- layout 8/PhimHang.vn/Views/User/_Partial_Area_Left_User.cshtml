            <div style="float: left; overflow: hidden" class="fb-like" data-href="@Request.Url.AbsoluteUri" data-colorscheme='dark' data-layout='button_count' data-action='like' data-show-faces='true' data-share='true'></div>

        </div>
    </div>
</div>
