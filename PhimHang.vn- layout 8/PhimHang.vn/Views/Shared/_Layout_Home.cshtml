<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />

    <!--Jquery-->
    @Scripts.Render("~/bundles/standardCoreRT")    
    <!---->
    @*<script src="~/signalr/hubs"></script>*@
    <!--For desgin layout-->
    @Styles.Render("~/bundles/StyleStandard")

    <!--for chart-->
    <link href="~/ThemeBlue/css/chart.css" rel="stylesheet" type="text/css">
    <!--End-->
    <link href="~/ThemeBlue/css/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/ThemeBlue/css/jquery.dropdown.css" rel="stylesheet">

    <script src="~/ThemeBlue/js/jquery.dropdown.js"></script>
    <script src="~/ThemeBlue/js/action.js"></script>
    <script src="~/ThemeBlue/js/action2.js"></script>
    <!-- End For desgin-->
    <link href="~/ThemeBlue/css/Notification.css" rel="stylesheet" />
</head>
<body style="background: url('/img/bg.png');">
    <!--facebook plugin-->
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '934180333272963',
                xfbml: true,
                version: 'v2.2'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <div id="fb-root"></div>    

    <!--facebook plugin-->
    <div class="NotificationCenter">
        <span id="textNoti"></span>
    </div>
    <!--Top banner -->
    <div id="top-banner" class="w100p bg-blue">
        <div class="content-main-top">
            <div class="f-left" id="top-banner-left">
                <div class="toSpan f-left">
                    @Html.Partial("_Partial_Area_Search_Profile")
                </div>
            </div>
            <div class="f-left" id='top-center'>
                <a href="/" class="logo" title="Cùng Phím">
                    <img src="/img/logo.jpg" alt="Cùng Phím">
                </a>
            </div>
            <div class="f-right" id="top-banner-right">
                <div class="toSpan top-banner-icon f-right">
                    @Html.Partial("_Partial_Area_Menu_Right")
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="toSpan top-banner-icon f-right"><a href="/myprofile/MessagesCenter"><i class="fa fa-comments-o"></i></a>
                        @if (ViewBag.NewMessege > 0)
                        {
                            <span id="CreateMesseger">
                                <span class="MessegeNofity">@ViewBag.NewMessege</span>
                            </span>
                        }
                        else
                        {
                            <span id="CreateMesseger"></span>
                        }
                    </div>
                    <div class="toSpan top-banner-icon f-right">
                        <a href="/user/@User.Identity.Name/tab/1"><i id="fahome" class="fa fa-home"></i></a>
                    </div>
               
                    <div class="toSpan top-banner-icon2 f-right">
                        <a href="/myprofile" class="avatar">
                            <img src="@ViewBag.AvataEmage?width=40&height=40&mode=crop" alt="Cùng Phím">
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>    
    <!---->
    <!--Top Menu -->
    <div class="menu-top-bar">
        <div class="top-menu-2 top-menu-2-custom">
            <a href="/ThiTruong?g=HOTSTOCK" class="link-menu-top-active bold hidden-xs-button">
                Cổ phiếu nóng
            </a>
            <ul class="nav navbar-nav top-panel-left2">
               @Html.Partial("_Partial_HotStock")
            </ul>
            <ul class="nav navbar-nav pull-right top-panel-right2">
                @Html.Partial("_Partial_Area_Index")
            </ul>
            <a href="/ThiTruong?g=A
               " class="link-menu-top-active bold hidden-xs-button2">
                Toàn thị trường
            </a>
        </div>
    </div> 

    <!---->
    <div class="content-main content-main2">
        <div class="area-left">
            @Html.Partial("_Partial_Area_Left_Home")
            @Html.Partial("_Partial_Area_Left_Home2")
        </div>
      

        @RenderBody()
       
            <div class="area-right">
                @Html.Partial("_Partial_Area_Right_Home")
               
            </div>

     
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
