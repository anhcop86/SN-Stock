    <meta name="author" content="phochungkhoan.com" />
    <meta property="fb:app_id" content="934180333272963" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="@Request.Url.AbsoluteUri" />
    <meta property="og:title" content="Mạng Xã Hội Phochungkhoan.com®" />
    <meta property="og:image" content="@ViewBag.AbsolutePathHostName/img/avatar2.jpg" />
    <meta property="og:description" content="Cộng đồng chứng khoán, nơi hội tụ nhà đầu tư, các môi giới và phân tích chứng khoán." />


   @Scripts.Render("~/bundles/standardCoreRT")

    <!--For desgin layout-->

   @Styles.Render("~/bundles/StyleStandard") 
    <!--for chart-->

    <link href="~/ThemeBlue/css/newstyle.css" rel="stylesheet" />
    <link href="~/ThemeBlue/css/chart.css" rel="stylesheet" />
    <!--End-->
    <link href="~/ThemeBlue/css/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/ThemeBlue/css/jquery.dropdown.css" rel="stylesheet">   
    <script src="~/ThemeBlue/js/jquery.dropdown.js"></script>     
    <!-- End For desgin-->
    <link href="~/ThemeBlue/css/Notification.css" rel="stylesheet" />

</head>
<body style="background: url('/img/bg.png');">
   
    <div class="NotificationCenter">
        <span id="textNoti"></span>
    </div>
    <!--Top banner -->
    <div id="top-banner" class="w100p bg-blue">
        <div class="content-main-top">
            <div class="f-left" id="top-banner-left">
                <div class="toSpan f-left">
                    @Html.Partial("_Partial_Area_Search_Profile")
                </div>
            </div>
            <div class="f-left" id='top-center'>
               @Html.Partial("_Partial_Area_Logo")
            </div>
            <div class="f-right" id="top-banner-right">
                <div class="toSpan top-banner-icon f-right">
                    @Html.Partial("_Partial_Area_Menu_Right")
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.Partial("_Partial_Area_Right_User_Info")
                }
                else
                {
                    @Html.Partial("_Partial_Area_Menu_Reposive")
                }
                
            </div>
        </div>
    </div>
    <!---->
    <!--Top Menu -->
    <div class="menu-top-bar">
        <div class="top-menu-2 top-menu-2-custom">
            <a href="/ThiTruong?g=HOTSTOCK" class="link-menu-top-active bold hidden-xs-button">
                CỔ PHIẾU NÓNG
            </a>
            <ul class="nav navbar-nav top-panel-left2">
                @Html.Partial("_Partial_HotStock")
            </ul>
            <ul class="nav navbar-nav pull-right top-panel-right2">
                @Html.Partial("_Partial_Area_Index")
            </ul>
            <a href="/ThiTruong?g=INDEX" class="link-menu-top-active bold hidden-xs-button2">
                CHỈ SỐ
            </a>
        </div>
    </div>

    <!---->
    <div class="content-875">
       @RenderBody()
    </div>


