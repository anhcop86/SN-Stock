@model PhimHang.Models.UserLogin

<div class="area-left"></div>
<div class="area-center area-center-cm">
    <div class="category-top">
        <a href="/@ViewBag.UserName" id="tab-baiphim" class="category-tab category-tab-active">
            <span>
                <span class="category-tab-name">Bài phím</span>
                <span class="strong">@ViewBag.TotalPost</span>
            </span>
        </a>
        <a href="/@ViewBag.UserName/tickers" id="tab-DauTu" class="category-tab">
            <span>
                <span class="category-tab-name">Danh mục</span>
                <span class="strong">@ViewBag.followStock</span>
            </span>
        </a>
        <a href="/@ViewBag.UserName/followers" id="tab-TheoDoi" class="category-tab">
            <span>
                <span class="category-tab-name">Theo dõi</span>
                <span class="strong">@ViewBag.Follow</span>
            </span>
        </a>
        <a href="/@ViewBag.UserName/following" id="tab-DuocTheoDoi" class="category-tab">
            <span>
                <span class="category-tab-name">Được theo dõi</span>
                <span class="strong">@ViewBag.Follower</span>
            </span>
        </a>
    </div>
</div>
<div class="area-right">
    
        <div class="btn-right-top">
            @*<a href="#" class="button-flow"><i class="fa fa-plus"></i>Theo dõi</a>*@
            @{
                if (User.Identity.IsAuthenticated)
                {
                    if (ViewBag.CheckUserExist == "E")
                    {

                    }
                    else if (ViewBag.CheckUserExist == "Y")
                    {
                        <a href="#" class="button-flow"><i class="fa fa-minus"></i>Đang theo dõi</a>
                    }
                    else
                    {
                        <a href="#" class="button-flow"><i class="fa fa-plus"></i>Theo dõi</a>
                    }
                }
                else
                {
                    <a href="/Account/Login?ReturnUrl=/@ViewBag.UserName" class="button-flow"><i class="fa fa-plus"></i>Theo dõi</a>

                }
            }
        </div>
    </div>
