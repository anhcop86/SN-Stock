                    @Html.Raw(@Model.Post.Message)
                </td>
            </tr>

            <tr>
                <td></td>
                <td>
                    <input onclick="return confirm('Cập nhật bài viết ưu tiên');" type="submit" value="Cập nhật" class="btn btn-default" /> |
                    <a style="color: #328AC5" href="/TickerHot">Back/Cancel</a>
                </td>
            </tr>
        }
    </table>


